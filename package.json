{
    "name": "savebackup",
    "displayName": "saveBackup",
    "description": "Backup file when you save.",
    "version": "0.0.4",
    "publisher": "purplestone",
    "tags": [
        "save",
        "backup",
        "bak"
    ],
    "icon": "saveBackup.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/purplestone/vscode-saveBackup.git"
    },
    "bugs": {
        "url": "https://github.com/purplestone/vscode-saveBackup/issues"
    },
    "engines": {
        "vscode": "^1.60.2"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.saveBackup.backupFile",
                "title": "Backup File"
            }
        ],
        "configuration": {
            "title": "Extension saveBackup",
            "type": "object",
            "properties": {
                "saveBackup.conf.enable": {
                    "type": "boolean",
                    "description": "Automatically backup into BAK_DIR when save.",
                    "default": true
                },
                "saveBackup.conf.backupDir": {
                    "type": "string",
                    "description": "Dir path that backup to.",
                    "default": "${.vscode}/saveBackup"
                },
                "saveBackup.conf.fileNameMatch": {
                    "type": "string",
                    "description": "Regex for matching files to save enable",
                    "default": ".*"
                },
                "saveBackup.conf.recreateSubfolders": {
                    "type": "boolean",
                    "description": "Recreate subfolders of the original location, as backupDir/[subFolders]/[fileName-yyyy-mm-dd-hr-mm-ss\n`false` stores all files in backupDir/[fileName]/yyyy-mm-dd-hr-mm-ss",
                    "default": false
                }
            }
        }
    },
    "scripts": {},
    "devDependencies": {}
}
